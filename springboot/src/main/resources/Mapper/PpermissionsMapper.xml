<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.springboot.mapper.PermissionsMapper">
    <insert id="add">
        INSERT INTO permissions (name,routing,code,state,role_prm) VALUES (#{name},#{routing},#{code},#{state},#{role_prm})
    </insert>
    <update id="update">
        UPDATE permissions SET name = #{name}, routing = #{routing},code = #{code},state = #{state},role_prm = #{role_prm} WHERE id = #{id}
    </update>
    <delete id="delete">
        delete from permissions where id = #{id}
    </delete>
    <select id="findAll" resultType="com.springboot.entity.Permissions">
        select * from permissions where role_prm != 'os' and role_prm != 'add' and role_prm != 'del' and role_prm != 'update'
    </select>
    <select id="pageSelect" resultType="com.springboot.entity.Permissions">
        select * from permissions
        <where>

            <if test="params != null and params.name != null and params.name != ''">
                and name like concat('%',#{ params.name },'%')
            </if>
        </where>
    </select>
</mapper>